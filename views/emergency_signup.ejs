<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emergency Signup - SafeZone</title>
    <link rel="stylesheet" href="/css/safezone-design-system.css">
    <link rel="stylesheet" href="/css/unified-auth.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="auth-wrapper">
        <!-- Background Orbs -->
        <div class="auth-background-orb orb-1"></div>
        <div class="auth-background-orb orb-2"></div>
        <div class="auth-background-orb orb-3"></div>

        <div class="auth-container-unified">
            <div class="auth-card-unified">
                <!-- Logo Section -->
                <div class="auth-logo-section">
                    <div class="auth-logo-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <h1 class="auth-title">Join SafeZone</h1>
                    <p class="auth-subtitle">Create Your Emergency Account</p>
                </div>

                <!-- Signup Form -->
                <form action="/emergency_signup" method="POST" class="auth-form">
                    <div class="auth-form-group">
                        <label for="name" class="auth-form-label">
                            <i class="fas fa-user"></i>
                            Full Name
                        </label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="auth-form-input"
                            placeholder="John Doe"
                            required
                            autofocus
                        >
                    </div>

                    <div class="auth-form-group">
                        <label for="email" class="auth-form-label">
                            <i class="fas fa-envelope"></i>
                            Email Address
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="auth-form-input"
                            placeholder="your.email@example.com"
                            required
                        >
                    </div>

                    <div class="auth-form-group">
                        <label for="password" class="auth-form-label">
                            <i class="fas fa-lock"></i>
                            Password
                        </label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            class="auth-form-input"
                            placeholder="Create a strong password"
                            required
                        >
                    </div>

                    <button type="submit" class="auth-submit-btn">
                        <span>Create Account</span>
                        <i class="fas fa-user-plus"></i>
                    </button>
                </form>

                <!-- Footer -->
                <div class="auth-footer">
                    <p class="auth-footer-text">
                        Already have an account?
                        <a href="/emergency_login" class="auth-footer-link">Sign In</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
